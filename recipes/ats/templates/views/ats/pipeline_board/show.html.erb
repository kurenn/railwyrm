<section class="mx-auto w-full max-w-7xl space-y-6 px-4 py-8 sm:px-6 lg:px-8">
  <header>
    <p class="text-sm font-medium text-brand-secondary">Pipeline board</p>
    <h1 class="mt-1 text-display-sm font-semibold text-primary">Staff Engineer pipeline</h1>
  </header>

  <div class="grid gap-4 lg:grid-cols-4">
    <% {
      "Applied" => ["Jordan Lee", "Toni Cruz", "Kai Brooks"],
      "Screening" => ["Mina Park", "Aria Patel"],
      "Interview" => ["Sam Rivera", "Noah Kim"],
      "Offer" => ["Lena Ortiz"]
    }.each do |stage, candidates| %>
      <article class="rounded-xl border border-secondary bg-primary p-4 shadow-sm">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-tertiary"><%= stage %></h2>
        <ul class="mt-3 space-y-2">
          <% candidates.each do |candidate| %>
            <li class="rounded-lg border border-secondary bg-secondary_subtle px-3 py-2 text-sm text-primary"><%= candidate %></li>
          <% end %>
        </ul>
      </article>
    <% end %>
  </div>
</section>
