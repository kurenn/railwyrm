<section class="mx-auto w-full max-w-5xl space-y-6 px-4 py-8 sm:px-6 lg:px-8">
  <header class="space-y-3">
    <p class="text-sm font-medium text-brand-secondary">Job posting</p>
    <h1 class="text-display-sm font-semibold text-primary">Staff Engineer</h1>
    <p class="text-sm text-tertiary">Engineering • Remote • Full-time</p>
  </header>

  <div class="rounded-xl border border-secondary bg-primary p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-primary">Role overview</h2>
    <p class="mt-3 text-sm leading-6 text-secondary">
      We are looking for an experienced engineer to lead architecture decisions,
      mentor the team, and ship reliable product experiences.
    </p>
    <div class="mt-5 flex items-center gap-3">
      <%= render Ui::Button::Component.new(size: :sm) do %>
        Add candidate
      <% end %>
      <%= render Ui::Button::Component.new(variant: :secondary, size: :sm) do %>
        Edit posting
      <% end %>
    </div>
  </div>

  <div class="rounded-xl border border-secondary bg-primary p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-primary">Pipeline snapshot</h2>
    <div class="mt-4 grid gap-4 sm:grid-cols-4">
      <%= render "ats/shared/metric_card", title: "Applied", value: "38" %>
      <%= render "ats/shared/metric_card", title: "Screening", value: "12" %>
      <%= render "ats/shared/metric_card", title: "Interview", value: "7" %>
      <%= render "ats/shared/metric_card", title: "Offer", value: "2" %>
    </div>
  </div>
</section>
