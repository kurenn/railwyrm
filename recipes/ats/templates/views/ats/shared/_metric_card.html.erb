<article class="rounded-xl border border-secondary bg-primary p-4 shadow-sm">
  <p class="text-sm font-medium text-tertiary"><%= title %></p>
  <p class="mt-2 text-2xl font-semibold text-primary"><%= value %></p>
  <% if subtitle.present? %>
    <p class="mt-2 text-sm text-tertiary"><%= subtitle %></p>
  <% end %>
</article>
