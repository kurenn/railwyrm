<div class="w-full bg-secondary_subtle px-4 py-8 sm:px-6 sm:py-10 lg:px-8 lg:py-12">
  <div class="mx-auto grid w-full max-w-7xl overflow-hidden rounded-2xl bg-primary shadow-2xl ring-1 ring-secondary lg:min-h-[44rem] lg:grid-cols-2">
    <section class="flex items-center px-5 py-8 sm:px-8 sm:py-10 lg:px-12 lg:py-12">
      <div class="w-full max-w-lg">
        <p class="text-sm font-semibold uppercase tracking-wide text-brand-secondary">Choose a new password</p>
        <h1 class="mt-2 text-display-sm font-semibold text-primary">Reset password</h1>
        <p class="mt-2 text-sm text-tertiary">Set a strong password and continue securely.</p>

        <% if resource.errors.any? %>
          <div class="mt-5 rounded-lg bg-error-primary px-3 py-2 text-sm text-error-primary">
            <ul class="space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-5 space-y-5" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <%= render Ui::Input::Component.new(
            label: "New password",
            type: "password",
            name: "#{resource_name}[password]",
            placeholder: "Enter new password",
            required: true,
            size: :md
          ) %>

          <%= render Ui::Input::Component.new(
            label: "Confirm new password",
            type: "password",
            name: "#{resource_name}[password_confirmation]",
            placeholder: "Repeat new password",
            required: true,
            size: :md
          ) %>

          <%= render Ui::Button::Component.new(type: "submit", size: :md, class: "w-full justify-center") do %>
            Update password
          <% end %>
        <% end %>
      </div>
    </section>

    <aside class="relative flex flex-col gap-8 border-t border-white/20 bg-brand-section px-6 py-8 text-white sm:px-8 sm:py-10 lg:justify-between lg:border-l lg:border-t-0 lg:px-10 lg:py-12">
      <div>
        <p class="inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-white/80">Trusted by teams</p>
        <h2 class="mt-6 text-display-xs font-semibold text-white">“A polished reset flow builds confidence and reduces friction at a critical moment.”</h2>
        <p class="mt-4 text-sm text-white/80">Clear interactions, consistent UI components, and responsive layouts.</p>
      </div>

      <div class="rounded-xl border border-white/20 bg-white/10 p-5">
        <p class="text-sm font-semibold text-white">Elena Park</p>
        <p class="mt-1 text-xs text-white/70">Design Systems, Harbor Inc.</p>
      </div>
    </aside>
  </div>
</div>
